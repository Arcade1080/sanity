{
  "extends": "../../tsconfig",
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"],
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "outDir": "./dist/ts",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ]
  },
  "references": [
    {"path": "../../packages/@sanity/base"},
    {"path": "../../packages/@sanity/form-builder"}
  ]
}
